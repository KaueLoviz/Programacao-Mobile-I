<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendarActivity"
    android:orientation="vertical"
    android:background="@drawable/minifundo">

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/seta"
        android:layout_marginLeft="20dp"
        android:onClick="VoltarAgendar" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="253dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_marginTop="-45dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text=" Agendar:"
        android:textColor="#000000"
        android:textSize="40dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Nome Paciente"
        android:id="@+id/etNomePaciente"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/ic_person_add_black_24dp"
        android:drawableLeft="@drawable/ic_person_add_black_24dp"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDataAgenda"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/custon_button"
            android:fontFamily="sans-serif-condensed-light"
            android:onClick="DataAgenda"
            android:text="Data"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:inputType="time"
            android:id="@+id/etData"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:fontFamily="sans-serif-condensed-light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnHoraAgenda"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/custon_button"
            android:fontFamily="sans-serif-condensed-light"
            android:onClick="HoraAgenda"
            android:text="Hora"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etHora"
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:backgroundTint="#000000"
            android:fontFamily="sans-serif-condensed-light"
            android:inputType="time"
            android:textColor="#000000"
            android:textColorHint="#000000" />


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eletrocardiograma - R$50,00"
            android:id="@+id/eletro50"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="15dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ecocardiograma - R$100,00"
            android:id="@+id/eco100"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="15dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teste ErgomÃ©trico - R$+150,00"
            android:id="@+id/teste150"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="15dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnAgendar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-condensed-light"
        android:onClick="Agendar"
        android:text="Agendar"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="@drawable/custon_button"/>

</LinearLayout>