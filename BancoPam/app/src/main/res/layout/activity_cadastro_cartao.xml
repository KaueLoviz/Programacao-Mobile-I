<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCartao"
    android:orientation="vertical"
    android:background="@drawable/cabecalho">


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/seta"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:onClick="btnVoltarCadastroII">

    </Button>


    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"></TextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="80dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/arial"
        android:hint="Nome Titular"
        android:textColorHint="#000"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#000">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/arial"
        android:hint="Numero do Cartão"
        android:textColorHint="#000"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#000">

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Vencimento"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:fontFamily="@font/arial"
        android:layout_marginTop="15dp"
        android:textColorHint="#000"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#000">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:fontFamily="@font/arial"
        android:layout_marginTop="15dp"
        android:textColorHint="#000"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#000">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bandeira Cartão"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:fontFamily="@font/arial"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColorHint="#000"
        android:backgroundTint="#000">
    </EditText>

    <Button
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/confirmar"
        android:layout_gravity="center_horizontal"
        android:onClick="btnconclusao">
    </Button>

</LinearLayout>