<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:orientation="vertical"
    android:background="@drawable/cabecalho">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/notificacao"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="370dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo !"
        android:textSize="25sp"
        android:fontFamily="@font/arial"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="#FFF"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Kauê Loviz "
        android:textSize="35sp"
        android:fontFamily="@font/arial"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:textColor="#FFF"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/usuariomenu">

    </TextView>



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/cardhomeee"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:onClick="btnpoupança">
        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 30,00"
            android:textSize="25sp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="60dp"
            android:id="@+id/edtSaldoMenu">
        </TextView>
    </LinearLayout>


        <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cadastrarcartao"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:onClick="btncadastrarcartao">

    </Button>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/emprestimo"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-88dp"
        android:layout_marginRight="75dp"
        android:onClick="btnemprestimo">
    </Button>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transferencia"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="-88dp"
        android:layout_marginRight="75dp"
        android:onClick="btntranferencia">
    </Button>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/depositar"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:onClick="btndepositar">
    </Button>


    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pagarboleto"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-88dp"
        android:layout_marginRight="75dp"
        android:onClick="btnpagarboleto">
    </Button>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcodecam"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="-88dp"
        android:layout_marginRight="75dp"
        android:onClick="btnqrcode">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rodapebackground"
        android:layout_marginTop="50dp">

    </TextView>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/home"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-80dp"
        android:onClick="btnhome">
    </Button>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/person"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="-80dp"
        android:onClick="btnhomePerfil">
    </Button>

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/config"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-61dp"
        android:onClick="btnhomeConfig">
    </Button>


















</LinearLayout>