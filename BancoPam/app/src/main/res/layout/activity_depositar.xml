<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Depositar"
    android:orientation="vertical"
    android:background="@drawable/cabecalho">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/seta"
        android:onClick="btnVoltarII">
    </Button>

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp">

    </TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Depositar"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:fontFamily="@font/arial"
        android:layout_marginTop="100dp"
        android:textColorHint="#000"
        android:backgroundTint="#FFF">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="R$ Valor DepÃ³sito"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:id="@+id/valorzinho">
    </EditText>

    <Button
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/confirmar"
        android:layout_gravity="center_horizontal"
        android:onClick="btnConluir">
    </Button>


</LinearLayout>