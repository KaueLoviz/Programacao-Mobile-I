<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emprestimo"
    android:orientation="vertical"
    android:background="@drawable/cabecalho">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/seta"
        android:onClick="btnVoltarIIII">
    </Button>

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp">

    </TextView>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Empréstimo"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:fontFamily="@font/arial"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:textColorHint="#FFF"
        android:backgroundTint="#FFF">
    </TextView>


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="R$ Valor empréstimo"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:layout_marginTop="50dp"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:id="@+id/valorzinhoempy">
    </EditText>

    <Button
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/confirmar"
        android:layout_gravity="center_horizontal"
        android:onClick="btnConluir">
    </Button>


</LinearLayout>