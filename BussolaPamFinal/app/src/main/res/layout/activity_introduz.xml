<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introduz"
    android:orientation="vertical"
    android:background="@drawable/fundinho">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/aventureiro"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Se localize da melhor
                                    maneira possivel"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/arial">

        </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Um app espetacular para você se aventurar com total segurança. Uma bússola 100% confiável e digital!"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAlignment="center"
        android:fontFamily="@font/arial">

    </TextView>



        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/botao"
            android:onClick="proseguir"/>

    </LinearLayout>

